<launch>
	<node pkg="usb_cam" type="usb_cam_node" name="camera" clear_params="true" output="screen">
		<param name="camera_info_url" type="string" value="file://$(find masterslave)/camera_info/head_camera_visual_1080p.yaml" />
		<param name="video_device" type="string" value="/dev/v4l/by-id/usb-Microsoft_MicrosoftÂ®_LifeCam_Studio_TM_-video-index0" />
		<param name="camera_frame_id" type="string" value="/camera" />
		<param name="image_height" value="1080" />
		<param name="image_width" value="1920" />
		<param name="framerate" value="30" />
		<param name="brightness" value="62" />
		<param name="focus" value="12" />
		<param name="sharpness" value="180"/>
	</node>
	<node ns="camera" pkg="image_proc" type="image_proc" name="image_proc_node" output="screen"/>
	
	<arg name="marker_size" default="1.0" />
        <arg name="max_new_marker_error" default="0.08" />
        <arg name="max_track_error" default="0.2" />

        <arg name="cam_image_topic" default="/camera/image_mono" />
        <arg name="cam_info_topic" default="/camera/camera_info" />   
        <arg name="output_frame" default="/camera" />
	<arg name="bundle_files_hand" default="$(find masterslave)/bundles/Tool.xml $(find masterslave)/bundles/Object.xml"/>

        <node ns="visualServoing" name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundlesNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg bundle_files_hand)" />

	<node pkg="rosbag" type="record" name="rosbag_record_position" args="-ao $(find masterslave)/rosbag/URSULA_Bag  -x /camera/(.*)|/tf/(.*)|/visualServoing/(.*) /camera/image_color/compressed" output="log"/>
|
	
	


 


  	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find masterslave)/rviz/UrsulaVisualServoing.rviz"/>
	<node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure" output="screen"/>
	
</launch>



