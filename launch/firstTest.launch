<?xml version="1.0"?>
<launch>
	<arg name="TestDevice" value="Joy"/>
	<node pkg="masterslave" type="controldevice" name="DeviceTest" args="$(arg TestDevice)" output="screen"/>
	<node respawn="true" pkg="joy" type="joy_node" name="joystick">
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.12"/>
		<param name="autorepeat_rate" value="60"/>
	</node>

</launch>

